* text=auto

# Use LF for source files
*.java text eol=lf
*.kt   text eol=lf
*.groovy text eol=lf
*.gradle text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf
*.md   text eol=lf

# Windows scripts keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Hints
*.java diff=java
